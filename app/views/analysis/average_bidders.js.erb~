$(function () {
  $("#results").html('<%= escape_javascript( render :partial => "average_bidders" ) %>');

  $(document).ready(function() {
      bidDurationChart = new Highcharts.Chart({
       chart: {
          renderTo: 'averageBidDurationGraph',
          type: 'bar',
          backgroundColor: 'rgba(255,255,255,0)'
       },
       title: {
          text: '<%=t("Average Number Of Bidders Per Tender")%>'
       },
       xAxis: {
          categories: [
             <% @info.each do |key,data| %>
              "<%=data[:name]%>",
             <% end %>
          ]
       },
       yAxis: {
          title: {
             text: '<%=t("Bidders")%>'
          }
       },
        series: [{
          name: '<%=t("Average Bidding Duration")%>',
          data: [<% @info.each do |key,data| %> ["<%=data[:name]%>",<%=data[:tenderInfo].total_bidders.to_f/data[:tenderInfo].count%>], <% end %>]
        }]
      });
  });

  return false;
});
