$(function () {
  $("#results").html('<%= escape_javascript( render :partial => "generate" ) %>');
    var tenderTypeChart;
    var tenderTypeCountChart;
    var bidDurationChart;
    var warningPeriodChart;
    <% tenderData = [ ["simple electronic",@info["simple electronic"]], ["electronic",@info["electronic"]] ]%>

    var dataset = []
    <% @info["simple electronic"][:bidInfo].each do |data| %>
      var dataPoint = { x: <%=data[0]%>, y: <%=data[1]%>, marker: { radius: <%=data[2]%>/(<%=@info["simple electronic"][:tenderInfo].count%> / 100) }, count: <%=data[2]%>}
      dataset.push(dataPoint)
    <%end%> 

    $(document).ready(function() {
        tenderTypeChart = new Highcharts.Chart({
            chart: {
                renderTo: 'amountGraph',
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            title: {
                text: 'Estimated value of Tenders by Type'
            },
            tooltip: {
        	    pointFormat: '{series.name}: <b>{point.percentage}%</b>',
            	percentageDecimals: 1
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        color: '#000000',
                        connectorColor: '#000000',
                        formatter: function() {
                            return '<b>'+ this.point.name +'</b>:' +this.y+' GEL';
                        }
                    }
                }
            },
            series: [{
                type: 'pie',
                name: 'Estimated value of Tenders by Type',
                data: [ <% tenderData.each do |data| %> ["<%=data[0]%>",<%=data[1][:tenderInfo].total_value%>], <% end %>]
            }]
        });


      tenderTypeCountChart = new Highcharts.Chart({
            chart: {
                renderTo: 'countGraph',
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            title: {
                text: 'Number of Tenders by Type'
            },
            tooltip: {
        	    pointFormat: '{series.name}: <b>{point.percentage}%</b>',
            	percentageDecimals: 1
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        color: '#000000',
                        connectorColor: '#000000',
                        formatter: function() {
                            return '<b>'+ this.point.name +'</b>:' +this.y;
                        }
                    }
                }
            },
            series: [{
                type: 'pie',
                name: 'Number of Tenders by Type',
                
                data: [ <% tenderData.each do |data| %> ["<%=data[0]%>",<%=data[1][:tenderInfo].count%>], <% end %>]
            }]
        });

      
      bidDurationChart = new Highcharts.Chart({
       chart: {
          renderTo: 'averageBidDurationGraph',
          type: 'bar'
       },
       title: {
          text: 'Average bidding duration'
       },
       xAxis: {
          categories: [
             <% tenderData.each do |type| %>
              "<%= type[0] %>",
             <% end %>
          ]
       },
       yAxis: {
          title: {
             text: 'Days'
          }
       },
       series: [        
               {
                name: "Average bidding duration",
                data: [ <% tenderData.each do |data| %> <%= data[1][:tenderInfo].average_bid_duration %>, <% end %>]
               },  
               ]  

        });

      warningPeriodChart = new Highcharts.Chart({

       chart: {
          renderTo: 'averageWarningPeriodGraph',
          type: 'bar'
       },
       title: {
          text: 'Average Time between tender announcement and bidding'
       },
       xAxis: {
          categories: [
             <% tenderData.each do |type| %>
              "<%= type[0] %>",
             <% end %>
          ]
       },
       yAxis: {
          title: {
             text: 'Days'
          }
       },
       series: [        
               {
                name: "Days after announcement",
                data: [ <% tenderData.each do |data| %> <%= data[1][:tenderInfo].average_warning_period %>, <% end %>]
               },  
               ]  

        });

      averageBidders = new Highcharts.Chart({

       chart: {
          renderTo: 'averageBiddersGraph',
          type: 'bar'
       },
       title: {
          text: 'Average number of bidders per tender'
       },
       xAxis: {
          categories: [
             <% tenderData.each do |type| %>
              "<%= type[0] %>",
             <% end %>
          ]
       },
       yAxis: {
          title: {
             text: 'Bidders'
          }
       },
       series: [        
               {
                name: "Bidders",
                data: [ <% tenderData.each do |data| %> <%= data[1][:tenderInfo].total_bidders.to_f / data[1][:tenderInfo].count  %>, <% end %>]
               },  
               ]  

        });

      averageBids = new Highcharts.Chart({

       chart: {
          renderTo: 'averageBidsGraph',
          type: 'bar'
       },
       title: {
          text: 'Average number of bids per tender'
       },
       xAxis: {
          categories: [
             <% tenderData.each do |type| %>
              "<%= type[0] %>",
             <% end %>
          ]
       },
       yAxis: {
          title: {
             text: 'Bids'
          }
       },
       series: [        
               {
                name: "Bids",
                data: [ <% tenderData.each do |data| %> <%= data[1][:tenderInfo].total_bids.to_f / data[1][:tenderInfo].count  %>, <% end %>]
               },  
               ]  

        });

      moreThan1Bid = new Highcharts.Chart({

       chart: {
          renderTo: 'moreThan1BidGraph',
          type: 'bar'
       },
       title: {
          text: 'Percentage of bids that had atleast one bidder'
       },
       xAxis: {
          categories: [
              <% tenderData.each do |type| %>
              "<%= type[0] %>",
             <% end %>
          ]
       },
       yAxis: {
          title: {
             text: 'Percentage'
          }
       },
       series: [        
               {
                name: "Percentage",
                data: [ <% tenderData.each do |data| %> <%= data[1][:tenderInfo].success_count.to_f / data[1][:tenderInfo].count  %>, <% end %>]
               },  
               ]  

        });

    scatterChart = new Highcharts.Chart({
            chart: {
                renderTo: 'scatterGraph'
            },
            xAxis: {
                min: 2,
                title: {
                  enabled: true,
                  text: 'Tender duration'
                },
            },
            yAxis: {
                min: 1.25,
                title: {
                  enabled: true,
                  text: 'Number of Bidders'
                },
            },
            title: {
                text: 'Duration of Tender vs Average number of Bidders (Simple Electronic)'
            },
            tooltip: {
                formatter:function (){
                  return ''+
                  this.x +' days, '+ this.y +' average bidders';
                }
            },


            series: [ {
                type: 'scatter',
                name: 'Observations',
                data: dataset
            }]
        });

        biddingDurationChart = new Highcharts.Chart({
          chart: {
              renderTo: 'biddingDurationGraph',
              plotBackgroundColor: null,
              plotBorderWidth: null,
              plotShadow: false
          },
          title: {
              text: 'Bidding Duration (Simple Electronic)'
          },
          tooltip: {
      	    pointFormat: '{series.name}: <b>{point.percentage}%</b>',
          	percentageDecimals: 1
          },
          plotOptions: {
              pie: {
                  allowPointSelect: true,
                  cursor: 'pointer',
                  dataLabels: {
                      enabled: true,
                      color: '#000000',
                      connectorColor: '#000000',
                      formatter: function() {
                          return '<b>'+ this.point.name +'</b>:' +this.y;
                      }
                  }
              }
          },
          series: [{
              type: 'pie',
              name: 'Bidding Duration',
              data: [  <% @info["simple electronic"][:bidInfo].each do |data| %> [ " <%=data[0].to_s + " days(s)" %>",  <%=data[2]%>  ], <%end%>  ]
          }]
        });

      
      createD3Graphs(<%=raw @info["total"][:cpvTree]%>);
    });
  return false;
});
