$(function () {
  $("#results").html('<%= escape_javascript( render :partial => "average_bids" ) %>');


  var dataset = []
  <% @info["simple electronic"][:bidInfo].each do |data| %>
    var dataPoint = { x: <%=data[0]%>, y: <%=data[1]%>, marker: { radius: <%=data[2]%>/(<%=@info["simple electronic"][:tenderInfo].count%> / 100) }, count: <%=data[2]%>}
  dataset.push(dataPoint)

  $(document).ready(function() {
      averageBidsChart = new Highcharts.Chart({
       chart: {
          renderTo: 'averageBidsGraph',
          type: 'bar',
          backgroundColor: 'rgba(255,255,255,0)'
       },
       title: {
          text: '<%=t("Average Number Of Bids Per Tender")%>'
       },
       xAxis: {
          categories: [
             <% @info.each do |key,data| %>
              "<%=data[:name]%>",
             <% end %>
          ]
       },
       yAxis: {
          title: {
             text: '<%=t("Bids")%>'
          }
       },
        series: [{
          name: '<%=t("Average Bids")%>',
          data: [<% @info.each do |key,data| %> ["<%=data[:name]%>",<%=data[:tenderInfo].total_bids.to_f/data[:tenderInfo].count%>], <% end %>]
        }]
      });
  });

  return false;
});
