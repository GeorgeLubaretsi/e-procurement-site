<script src="/assets/jtree/jquery.jstree.js"></script>
<script src="/assets/jtree/cpvTree.js"></script>

<script>
  $(document).ready( function() { 
    initTree( "<%="/assets/cpvTree.#{I18n.locale}.json"%>" );
  })
</script>

<%= button_to t("Back to Profile"), user_path,:method => :get, :class => "user-button" %>
<br>
<%= form_tag( { :controller => :cpv_tree, :action => "save_cpv_group", :isGlobal=> @isGlobal, :cpvGroup => @cpvGroup}, {:id => "saveTree"} ) do %>
  <%= label_tag(:category, @cpvName) %>
  <%= hidden_field_tag(:codes, @checkedNodes) %>
  <%= submit_tag( t("Save Category"), :class => "submit-button") %>
<% end %>

<div id="cpvTree">
</div>
