  <thead>
    <tr>
      <th><%= sortable(@params, "name") %></th>
      <th><%= sortable(@params, "code") %></th>
      <th><%= sortable(@params, "org_type") %></th>
      <th><%= sortable(@params, "country") %></th>
      <th><%= sortable(@params, "email") %></th>
      <th><%= sortable(@params, "phone_number") %></th>
    </tr>
  </thead>
  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= link_to organization.name, organization_path(organization) %></td>
        <td><%= organization.code %></td>
        <td><%= organization.org_type %></td>
        <td><%= organization.country %></td>
        <td><%= organization.email %></td>
        <td><%= organization.phone_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>
