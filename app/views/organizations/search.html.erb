<%- model_class = Organization -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

Number of Organizations found: <%= @numResults %>
<p>
  Download:
  <% @params[:format] = "csv" %>
  <% @params[:controller] = "organization" %>
  <% @params[:action] = "search" %>
  <%= link_to "CSV",  @params %>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable(@params, "name") %></th>
      <th><%= sortable(@params, "code") %></th>
      <th><%= sortable(@params, "org_type") %></th>
      <th><%= sortable(@params, "country") %></th>
      <th><%= sortable(@params, "email") %></th>
      <th><%= sortable(@params, "phone_number") %></th>
    </tr>
  </thead>
  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= link_to organization.name, organization_path(organization) %></td>
        <td><%= organization.code %></td>
        <td><%= t(organization.org_type) %></td>
        <td><%= t(organization.country) %></td>
        <td><%= organization.email %></td>
        <td><%= organization.phone_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= page_navigation_links @organizations %>
