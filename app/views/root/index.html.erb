<div class="row" id="mid-row">
  <div class="span4 search-org">
    <h4>Search Companies</<h4>
    <%= form_for Organization.new, :url => { :controller => "organization", :action => "search" }, :method => 'get' do |f| %>
      <br>
      <%= f.label :name %>
      <%= f.text_field  :name %>

      <%= f.label :code %>
      <%= f.text_field :code %>

      <%= f.label :type %>
      <% types = [] %>
      <% @orgTypes.each do |orgType| %>
        <% types.push(item = [t(orgType),orgType]) %>
      <%end%>
      <%= select_tag(:org_type, options_for_select(types), :include_blank => true)  %>


      <label for="isForeign">Only Foreign</label>
      <%= check_box("isForeign","foreign") %>
      <br>
      <%= submit_tag "Search" %>
    <% end %>
  </div>


  <div class="span4 search-org">
    <h4>Search Procurers</<h4>
    <%= form_for Organization.new, :url =>  { :controller => "organization", :action => "search_procurer" }, :method => 'get' do |f| %>
      <br>
      <%= f.label :name %>
      <%= f.text_field  :name %>

      <%= f.label :code %>
      <%= f.text_field :code %>

      <%= f.label :type %>
      <% types = [] %>
      <% @procTypes.each do |orgType| %>
        <% orgType = orgType.gsub(".","") %>
        <% types.push(item = [t(orgType),orgType]) %>
      <% end %>
      <%= select_tag(:org_type, options_for_select(types), :include_blank => true)  %>

      <br>
      <%= submit_tag "Search" %>
    <% end %>
  </div>

  <div class="span4 search-tender">
    <h4>Search Tenders</<h4>
    <%= form_for Tender.new, :url => {:controller => "tender", :action => "search"}, :method => 'get' do |f| %>
      <br>
      <%= f.label :status %>
      <% options = [] %>
      <% @uniqueStatus.each do |status| %>
        <% options.push(item = [t(status),status]) %>
      <% end %>
      <%= select_tag(:tender_status, options_for_select(options), :include_blank => true)  %>

      <label for="cpvGroup">Category</label>
      <%= select_tag(:cpvGroup, options_from_collection_for_select(@cpvGroups, :id, :name,:include_blank => true) ) %>
      <label for="tender_registration_number">Registration Code</label>
      <input name="tender_registration_number" type="text"></text_field>
      <label for="announced_after">Announced After</label>
      <input name="announced_after" type="text" class="dp2" value="" data-date-format="yyyy/mm/dd" id="dp2" >
      <label for="announced_before">Announced Before</label>
      <input name="announced_before" type="text" class="dp2" value="" data-date-format="yyyy/mm/dd" id="dp3" >
      
      <label for="min_estimate">Minimum Cost Estimate</label>
      <input name="min_estimate" type="text"></text_field>
      <label for="max_estimate">Maximum Cost Estimate</label>
      <input name="max_estimate" type="text"></text_field>

      <label for="min_num_bids">Min Number of Bids</label>
      <input name="min_num_bids" type="text"></text_field>
      <label for="max_num_bids">Max Number of Bids</label>
      <input name="max_num_bids" type="text"></text_field>

      <label for="min_num_bidders">Min Number of Bidders</label>
      <input name="min_num_bidders" type="text"></text_field>
      <label for="max_num_bidders">Max Number of Bidders</label>
      <input name="max_num_bidders" type="text"></text_field>
      
      <br>
      <%= submit_tag "Search" %>
    <% end %>
  </div>


 <% if @cpvGroups.length > 0 %>
   <div class="span4 aggregate-data">
      <h4>Show Major Players</<h4>
      <%= form_tag( {:controller => :aggregate, :action => "cpvVsCompany"}, :remote => false) do %>
        <%= select_tag(:cpvGroup, options_from_collection_for_select(@cpvGroups, :id, :name))  %>
        <%= submit_tag "Generate Graph" %>
      <% end %>
    </div>
 <% end %>

</div>
