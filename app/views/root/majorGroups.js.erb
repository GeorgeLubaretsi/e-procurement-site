$(document).ready(function() {
    groupChart = new Highcharts.Chart({
       chart: {
          height: 600,
          renderTo: 'groupGraph',
          type: 'bar'
       },
       title: {
          text: '<%=t("Major Sectors")%>'
       },
       xAxis: {
          categories: [
             <% @majorGroups.each do |info| %>
              '<%= info[:name]%>',
             <% end %>
          ]
       },
       yAxis: {
          title: {
             text: '<%=t("Lari")%>'
          }
       },
       series: [        
               {
                name: "<%=t("Awarded Contract Total")%>",
                data: [ <% @majorGroups.each do |info| %> <%= info[:total] %>, <% end %>]
               },  
      ]   
    });
 });
