<h2><%=t("Forgot_Pass")%></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label t("Email") %><br />
  <%= f.email_field :email %></div>

  <div><%= f.submit t("Send_Pass_Reset") %></div>
<% end %>

<%= render "links" %>
