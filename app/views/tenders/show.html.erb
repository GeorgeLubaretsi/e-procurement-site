<%- model_class = Tender -%>
<div class="page-header">
  <h1><%=t '.title', :default => t("Tender") %></h1>
</div>

<% if user_signed_in? %>
  <div class="tender_subscription">
    <% if @isWatched %>
      <%= button_to t("Remove From Profile"), {:controller => :user, :action => "remove_tender_watch", :tender_url => @tenderUrl, :user_id => current_user.id}, :remote => true %>
    <% else %>
      <%= button_to t("Save To Profile"), {:controller => :user, :action => "add_tender_watch", :tender_url => @tenderUrl, :tender_id => @tender.id, :user_id => current_user.id}, :remote => true %>
    <% end %>
  </div>
<% end %>

  <% highlightClass = "" %>
  <% if @highlights.include?('tender_status') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>
<h3 <%=highlightClass%> ><%= t(@tender.tender_status) %></h3>
<br>
<br>

<dl class="info-horizontal">
  <% highlightClass = "" %>
  <% if @highlights.include?('procurring_entity_id') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>
  <dt <%=highlightClass%> ><strong> <%=t("Procuring Entity")%>:</strong></dt>
  <dd <%=highlightClass%> ><%= link_to @procurer, :controller => "organizations", :action => "show_procurer", :id => @tender.procurring_entity_id %></td>

  <% highlightClass = "" %>
  <% if @highlights.include?('tender_type') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>
  <dt <%=highlightClass%> ><strong><%=t("Tender Type") %>:</strong></dt>
  <dd <%=highlightClass%> ><%= t(@tender.tender_type.strip()) %></dd>

  <% highlightClass = "" %>
  <% if @highlights.include?('tender_registration_number') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>
  <dt <%=highlightClass%> ><strong><%=t("Tender Registration Number")%>:</strong></dt>
  <dd <%=highlightClass%> ><%= @tender.tender_registration_number %></dd>

  <% highlightClass = "" %>
  <% if @highlights.include?('tender_announcement_date') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>
  <dt <%=highlightClass%> ><strong><%=t("Tender Announcement Date")%>:</strong></dt>
  <dd <%=highlightClass%> ><%= @tender.tender_announcement_date %></dd>

  <% highlightClass = "" %>
  <% if @highlights.include?('bid_start_date') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>
  <dt <%=highlightClass%> ><strong><%=t("Bid Start Date")%>:</strong></dt>
  <dd <%=highlightClass%> ><%= @tender.bid_start_date %></dd>

  <% highlightClass = "" %>
  <% if @highlights.include?('bid_end_date') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>
  <dt <%=highlightClass%> ><strong><%= t("Bid End Date")%>:</strong></dt>
  <dd <%=highlightClass%> ><%= @tender.bid_end_date %></dd>

  <% highlightClass = "" %>
  <% if @highlights.include?('bid_start_date') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>
  <dt <%=highlightClass%> ><strong><%=t("Bidding Duration")%>:</strong></dt>
  <dd <%=highlightClass%> ><%= (@tender.bid_end_date - @tender.bid_start_date).to_i.to_s+ " "+t("Days")%></dd>

  <% highlightClass = "" %>
  <% if @highlights.include?('estimated_value') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>
  <dt <%=highlightClass%> ><strong><%= t("Estimated Value")%>:</strong></dt>
  <dd <%=highlightClass%> ><%= number_to_currency(@tender.estimated_value,:unit => "GEL ") %></dd>

  <% highlightClass = "" %>
  <% if @highlights.include?('cpv_code') %>
    <% highlightClass = 'class="bidwinner"'.html_safe %>
  <% end %>

  <dt <%=highlightClass%> ><strong><%=t("Procuring Category")%>:</strong></dt>
  <dd <%=highlightClass%> ><%= @tender.cpv_code %> - <%= @cpv.description_english %></dd>

  <dt <%=highlightClass%> ><strong><%=t("CPV Codes")%>:</strong></dt>
  <% @minorCPVCategories.each do |code| %>
    <dd <%=highlightClass%> ><%= code.cpv_code %></dd>
  <% end %>

  
</dl>

  <br><br>
  <%=t("Risk Score")%> = <%= @totalRisk %>
  <% if @totalRisk > 0 %>
    <br>
    <% @risks.each do |risk| %>
      <%= risk.name %>
      <br>
    <% end %>
  <% end %> 

<div class="modal">
</div>


<% if @bidderInfo.length > 0 %>
  <hr>
  <table class="table table-striped">
    <thead>
      <h3><%=t("Participants")%></h3>
      <tr>
        <th><%=t("Name")%></th>
        <th><%=t("First Bid")%></th>
        <th><%=t("Last Bid")%></th>
        <th><%=t("Number Of Bids")%></th>

      </tr>
    </thead>
    <tbody>
      <% @bidderInfo.each do |info| %>
        <% if info[:won] %>
          <% myClass = 'class="bidwinner"'.html_safe %>
        <% else %>
          <% myClass = "" %>
         <% end %>
        <tr <%=myClass%>>
            <% iconPath = nil %>
            <% if info[:whiteList] %>
             <%iconPath = "plusIcon.png"%>
            <% elsif info[:blackList] %>
             <%iconPath = "minusIcon.png"%><
            <% end %>
            
            <td <%=myClass%>><%if iconPath %><%= link_to( image_tag(iconPath, :size => "16x16"), {:controller => "dialog", :action => "showWhiteList", :id => info[:id] }, :remote => true ) %><%end%> <%=link_to info[:name], organization_path(info[:id]) %></td>
            <td <%=myClass%>><%=  number_to_currency(info[:highBid],:unit => "") %></td>
            <td <%=myClass%>><%=  number_to_currency(info[:lowBid],:unit => "") %></td>
            <td <%=myClass%>><%= info[:numBids] %></td>
         </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @agreementInfo.length > 0 %>
  <hr>
  <table class="table table-striped">
    <thead>
      <h3><%=t("Bidding Result")%></h3>
      <tr>
        <th><%=t("Contract Type")%></th>
        <th><%=t("Organization")%></th>
        <th><%=t("Contract Value")%></th>
        <th><%=t("Start Date")%></th>
        <th><%=t("Expiry Date")%></th>
        <th><%=t("Documentation")%></th>
      </tr>
    </thead>
    <tbody>
      <% @agreementInfo.each do |agreement| %>
        <% if agreement[:value] == -1 %>
          <tr>
            <td><%= agreement[:Type].strip() %></td>
            <td><%= link_to agreement[:OrgName], organization_path(agreement[:OrgID]) %></td>
            <td><%= agreement[:document] %></td>
            <td><%= agreement[:startDate] %></td>        
          </tr> 
       <% else %>
          <tr>
            <td><%= agreement[:Type].strip() %></td>
            <td><%= link_to agreement[:OrgName], organization_path(agreement[:OrgID]) %></td>
            <td><%= number_to_currency(agreement[:value],:unit => "") %></td>
            <td><%= agreement[:startDate] %></td>
            <td><%= agreement[:expiryDate] %></td>
            <td><a href=<%= agreement[:document] %>>link</a></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @complaints.length > 0 %>
  <hr>
  <table class="table table-striped">
    <thead>
      <h3><%=t("Complaints")%><h3>
      <tr>
        <th><%=t("Status")%></th>
        <th><%=t("Complainant")%></th>
      </tr>
    </thead>
   <tbody>
      <% @complaints.each do |complaint| %>
        <tr>
        <td><%= link_to( complaint.status, {:controller => "dialog", :action => "showComplaint", :id => complaint.id }, :remote => true ) %></td>
        <td><%= link_to complaint.organization_name, organization_path(complaint.organization_id)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @documentation.length > 0 %>
  <hr>
  <table class="table table-striped">
    <thead>
      <h3><%=t("Documentation")%><h3>
      <tr>
        <th><%=t("Title")%></th>
        <th><%=t("Author")%></th>
        <th><%=t("Date Submitted")%></th>
      </tr>
    </thead>
    <tbody>
      <% @documentation.each do |document| %>
        <tr>
        <td><a href=<%= document.document_url %>><%= document.title %></a></td> 
        <td><%= document.author %></td>
        <td><%= document.date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

